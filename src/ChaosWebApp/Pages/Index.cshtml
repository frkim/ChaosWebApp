@page
@model ChaosWebApp.Pages.IndexModel
@{
    ViewData["Title"] = "Product Catalog";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 mb-1">
            <i class="fas fa-store text-primary me-2"></i>Product Catalog
        </h1>
        <p class="text-muted mb-0">@Model.TotalCount products total</p>
    </div>
    <div class="d-flex gap-2 align-items-center">
        <!-- Add Products button -->
        <div class="dropdown">
            <button class="btn btn-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-plus-circle me-1"></i> Add Products
            </button>
            <ul class="dropdown-menu dropdown-menu-end shadow">
                <li><h6 class="dropdown-header">Generate random products</h6></li>
                <li><a class="dropdown-item" asp-page="/Index" asp-route-addCount="5"><i class="fas fa-plus me-2 text-success"></i>+ 5 products</a></li>
                <li><a class="dropdown-item" asp-page="/Index" asp-route-addCount="10"><i class="fas fa-plus me-2 text-success"></i>+ 10 products</a></li>
                <li><a class="dropdown-item" asp-page="/Index" asp-route-addCount="100"><i class="fas fa-plus me-2 text-warning"></i>+ 100 products</a></li>
                <li><a class="dropdown-item" asp-page="/Index" asp-route-addCount="1000"><i class="fas fa-plus me-2 text-danger"></i>+ 1,000 products</a></li>
            </ul>
        </div>
    </div>
</div>

<!-- Search & filter bar -->
<div class="card shadow-sm mb-4 border-0">
    <div class="card-body py-3">
        <form method="get" class="row g-2 align-items-center">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" name="filter" value="@Model.Filter" class="form-control border-start-0 ps-0" placeholder="Search by name, brand, category..." />
                </div>
            </div>
            <div class="col-auto">
                <label class="col-form-label me-1 text-muted small">Show</label>
            </div>
            <div class="col-auto">
                <select name="pageSize" class="form-select form-select-sm" onchange="this.form.submit()">
                    @foreach (var size in new[] { 10, 25, 50 })
                    {
                        <option value="@size" selected="@(Model.PageSize == size)">@size</option>
                    }
                </select>
            </div>
            <div class="col-auto">
                <label class="col-form-label text-muted small">per page</label>
            </div>
            <input type="hidden" name="sortBy" value="@Model.SortBy" />
            <input type="hidden" name="ascending" value="@Model.Ascending.ToString().ToLower()" />
            <input type="hidden" name="page" value="1" />
            <div class="col-auto">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fas fa-filter me-1"></i>Filter
                </button>
                @if (!string.IsNullOrEmpty(Model.Filter))
                {
                    <a asp-page="/Index" asp-route-page="1" asp-route-pageSize="@Model.PageSize" asp-route-sortBy="@Model.SortBy" asp-route-ascending="@Model.Ascending.ToString().ToLower()" class="btn btn-outline-secondary btn-sm ms-1">
                        <i class="fas fa-times me-1"></i>Clear
                    </a>
                }
            </div>
        </form>
    </div>
</div>

<!-- Products table -->
<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        @if (!Model.Products.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                <p class="text-muted">No products found for "<strong>@Model.Filter</strong>"</p>
                <a asp-page="/Index" class="btn btn-primary">View all products</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover product-table align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            @{
                                string SortLink(string field, string label)
                                {
                                    var isActive = string.Equals(Model.SortBy, field, StringComparison.OrdinalIgnoreCase);
                                    var nextAsc = isActive ? !Model.Ascending : true;
                                    var icon = isActive ? (Model.Ascending ? "▲" : "▼") : "";
                                    return $"""<a href="?pageNumber=1&pageSize={Model.PageSize}&sortBy={field}&ascending={nextAsc.ToString().ToLower()}&filter={Uri.EscapeDataString(Model.Filter ?? "")}" class="text-decoration-none text-white sort-link {(isActive ? "active" : "")}">{label} {icon}</a>""";
                                }
                            }
                            <th>@Html.Raw(SortLink("name", "Name"))</th>
                            <th>@Html.Raw(SortLink("brand", "Brand"))</th>
                            <th>@Html.Raw(SortLink("category", "Category"))</th>
                            <th class="text-end">@Html.Raw(SortLink("price", "Price"))</th>
                            <th>@Html.Raw(SortLink("rating", "Rating"))</th>
                            <th class="text-center">@Html.Raw(SortLink("stock", "Stock"))</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="fw-semibold text-dark small">@product.Name</span>
                                        <div class="mt-1">
                                            @if (product.IsNew)
                                            {
                                                <span class="badge bg-success bg-opacity-10 text-success border border-success-subtle me-1" style="font-size:.7rem">NEW</span>
                                            }
                                            @if (product.IsPromotion)
                                            {
                                                <span class="badge bg-danger bg-opacity-10 text-danger border border-danger-subtle" style="font-size:.7rem">SALE</span>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td><span class="badge bg-light text-dark border">@product.Brand</span></td>
                                <td>
                                    <span class="text-muted small">@product.Category</span>
                                    @if (!string.IsNullOrEmpty(product.SubCategory) && product.SubCategory != product.Category)
                                    {
                                        <br /><span class="text-muted" style="font-size:.75rem">@product.SubCategory</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="fw-bold text-primary">$@product.Price.ToString("N2")</div>
                                    @if (product.OriginalPrice.HasValue)
                                    {
                                        <div class="text-muted text-decoration-line-through small">$@product.OriginalPrice.Value.ToString("N2")</div>
                                    }
                                </td>
                                <td>
                                    @{
                                        var stars = (int)Math.Round(product.Rating);
                                        var halfStar = product.Rating - stars >= 0.4 && product.Rating - stars < 0.9;
                                    }
                                    <div class="star-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= stars)
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                            else if (halfStar && i == stars + 1)
                                            {
                                                <i class="fas fa-star-half-alt text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star text-muted"></i>
                                            }
                                        }
                                    </div>
                                    <span class="text-muted" style="font-size:.75rem">@product.Rating.ToString("F1") (@product.ReviewCount.ToString("N0"))</span>
                                </td>
                                <td class="text-center">
                                    @if (product.Stock > 10)
                                    {
                                        <span class="badge bg-success rounded-pill">@product.Stock</span>
                                    }
                                    else if (product.Stock > 0)
                                    {
                                        <span class="badge bg-warning text-dark rounded-pill">@product.Stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger rounded-pill">0</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-page="/ProductDetail" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm" title="View details">
                                        <i class="fas fa-eye me-1"></i>Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="d-flex justify-content-between align-items-center px-3 py-3 border-top">
                    <small class="text-muted">
                        Showing @(((Model.CurrentPage - 1) * Model.PageSize) + 1)
                        to @(Math.Min(Model.CurrentPage * Model.PageSize, Model.FilteredCount))
                        of @Model.FilteredCount results
                    </small>
                    <nav aria-label="Product pagination">
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-page="/Index" asp-route-pageNumber="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize" asp-route-sortBy="@Model.SortBy" asp-route-ascending="@Model.Ascending.ToString().ToLower()" asp-route-filter="@Model.Filter">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                            @for (var p = Math.Max(1, Model.CurrentPage - 2); p <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); p++)
                            {
                                <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-page="/Index" asp-route-pageNumber="@p" asp-route-pageSize="@Model.PageSize" asp-route-sortBy="@Model.SortBy" asp-route-ascending="@Model.Ascending.ToString().ToLower()" asp-route-filter="@Model.Filter">@p</a>
                                </li>
                            }
                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-page="/Index" asp-route-pageNumber="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize" asp-route-sortBy="@Model.SortBy" asp-route-ascending="@Model.Ascending.ToString().ToLower()" asp-route-filter="@Model.Filter">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        }
    </div>
</div>
