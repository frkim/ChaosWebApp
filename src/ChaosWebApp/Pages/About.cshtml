@page
@model ChaosWebApp.Pages.AboutModel
@{
    ViewData["Title"] = "À propos de ChaosApp";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="text-center mb-5">
            <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-dark text-warning mb-3" style="width:80px;height:80px">
                <i class="fas fa-radiation fa-2x"></i>
            </div>
            <h1 class="display-5 fw-bold">ChaosApp</h1>
            <p class="lead text-muted">Simulateur de pannes pour tests de résilience et d'observabilité</p>
        </div>

        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body p-4">
                <h4 class="fw-bold mb-3"><i class="fas fa-info-circle text-primary me-2"></i>Présentation</h4>
                <p>
                    <strong>ChaosApp</strong> est une application Web et API RESTful développée avec <strong>.NET 10</strong>
                    qui simule un catalogue de produits type e-commerce (inspiré de <a href="https://www.fnac.com" target="_blank" rel="noopener">Fnac.com</a>)
                    tout en permettant d'injecter délibérément des pannes et problèmes de performance.
                </p>
                <p>
                    Elle est conçue pour tester la résilience de vos infrastructures, valider les alertes Application Insights,
                    et former les équipes aux pratiques de <strong>Chaos Engineering</strong>.
                </p>
            </div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3"><i class="fas fa-store text-success me-2"></i>Fonctionnalités produits</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Catalogue de 50+ produits réalistes</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Tableau paginé, trié et filtrable</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Détail produit avec notation étoiles</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Génération de produits aléatoires (+5, +10, +100, +1000)</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>API RESTful documentée avec Swagger</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3"><i class="fas fa-radiation text-danger me-2"></i>Types de pannes simulées</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-microchip text-danger me-2"></i>CPU élevé</li>
                            <li class="mb-2"><i class="fas fa-memory text-danger me-2"></i>Consommation mémoire élevée</li>
                            <li class="mb-2"><i class="fas fa-clock text-danger me-2"></i>Haute latence / Réponse lente</li>
                            <li class="mb-2"><i class="fas fa-bomb text-danger me-2"></i>Erreurs HTTP (404, 500, 503, 429)</li>
                            <li class="mb-2"><i class="fas fa-infinity text-danger me-2"></i>Stack Overflow simulé</li>
                            <li class="mb-2"><i class="fas fa-random text-danger me-2"></i>Erreurs HTTP aléatoires</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body p-4">
                <h5 class="fw-bold mb-3"><i class="fas fa-layer-group text-info me-2"></i>Stack technique</h5>
                <div class="row g-3">
                    @{
                        void TechBadge(string icon, string label, string desc)
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center gap-2 p-2 border rounded-2">
                                    <i class="@icon fa-lg text-primary" style="width:24px;text-align:center"></i>
                                    <div>
                                        <div class="fw-semibold small">@label</div>
                                        <div class="text-muted" style="font-size:.75rem">@desc</div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    @{ TechBadge("fab fa-microsoft", ".NET 10", "ASP.NET Core — Razor Pages + Web API"); }
                    @{ TechBadge("fab fa-docker", "Docker", "Image unique Web App + API"); }
                    @{ TechBadge("fas fa-cloud", "Azure Container Apps", "Déploiement serverless"); }
                    @{ TechBadge("fas fa-chart-line", "Application Insights", "Monitoring & télémétrie"); }
                    @{ TechBadge("fas fa-cogs", "Azure App Configuration", "Configuration centralisée"); }
                    @{ TechBadge("fas fa-code-branch", "Bicep", "Infrastructure-as-Code Azure"); }
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <h5 class="fw-bold mb-3"><i class="fas fa-link text-secondary me-2"></i>Liens utiles</h5>
                <div class="d-flex gap-3 flex-wrap">
                    <a href="/swagger" class="btn btn-outline-primary">
                        <i class="fas fa-code me-2"></i>API Swagger
                    </a>
                    <a asp-page="/ChaosConfig" class="btn btn-outline-danger">
                        <i class="fas fa-radiation me-2"></i>Configurer le Chaos
                    </a>
                    <a asp-page="/Index" class="btn btn-outline-success">
                        <i class="fas fa-store me-2"></i>Catalogue Produits
                    </a>
                    <a href="/health/live" target="_blank" class="btn btn-outline-secondary">
                        <i class="fas fa-heartbeat me-2"></i>Health Check
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
