@page
@model ChaosWebApp.Pages.AboutModel
@{
    ViewData["Title"] = "About ChaosApp";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="text-center mb-5">
            <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-dark text-warning mb-3" style="width:80px;height:80px">
                <i class="fas fa-radiation fa-2x"></i>
            </div>
            <h1 class="display-5 fw-bold">ChaosApp</h1>
            <p class="lead text-muted">Fault simulator for resilience and observability testing</p>
        </div>

        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body p-4">
                <h4 class="fw-bold mb-3"><i class="fas fa-info-circle text-primary me-2"></i>Overview</h4>
                <p>
                    <strong>ChaosApp</strong> is a Web application and RESTful API built with <strong>.NET 10</strong>
                    that simulates an e-commerce product catalog (inspired by <a href="https://www.fnac.com" target="_blank" rel="noopener">Fnac.com</a>)
                    while allowing you to deliberately inject failures and performance issues.
                </p>
                <p>
                    It is designed to test the resilience of your infrastructure, validate Application Insights alerts,
                    and train teams on <strong>Chaos Engineering</strong> practices.
                </p>
            </div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3"><i class="fas fa-store text-success me-2"></i>Product Features</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Catalog of 50+ realistic products</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Paginated, sortable and filterable table</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Product detail with star ratings</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Random product generation (+5, +10, +100, +1000)</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>RESTful API documented with Swagger</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3"><i class="fas fa-radiation text-danger me-2"></i>Simulated Fault Types</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-microchip text-danger me-2"></i>High CPU</li>
                            <li class="mb-2"><i class="fas fa-memory text-danger me-2"></i>High memory consumption</li>
                            <li class="mb-2"><i class="fas fa-clock text-danger me-2"></i>High latency / Slow response</li>
                            <li class="mb-2"><i class="fas fa-bomb text-danger me-2"></i>HTTP errors (404, 500, 503, 429)</li>
                            <li class="mb-2"><i class="fas fa-infinity text-danger me-2"></i>Simulated Stack Overflow</li>
                            <li class="mb-2"><i class="fas fa-random text-danger me-2"></i>Random HTTP errors</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body p-4">
                <h5 class="fw-bold mb-3"><i class="fas fa-layer-group text-info me-2"></i>Tech Stack</h5>
                <div class="row g-3">
                    @{
                        void TechBadge(string icon, string label, string desc)
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center gap-2 p-2 border rounded-2">
                                    <i class="@icon fa-lg text-primary" style="width:24px;text-align:center"></i>
                                    <div>
                                        <div class="fw-semibold small">@label</div>
                                        <div class="text-muted" style="font-size:.75rem">@desc</div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    @{ TechBadge("fab fa-microsoft", ".NET 10", "ASP.NET Core â€” Razor Pages + Web API"); }
                    @{ TechBadge("fab fa-docker", "Docker", "Single Web App + API image"); }
                    @{ TechBadge("fas fa-cloud", "Azure Container Apps", "Serverless deployment"); }
                    @{ TechBadge("fas fa-chart-line", "Application Insights", "Monitoring & telemetry"); }
                    @{ TechBadge("fas fa-cogs", "Azure App Configuration", "Centralized configuration"); }
                    @{ TechBadge("fas fa-code-branch", "Bicep", "Azure Infrastructure-as-Code"); }
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <h5 class="fw-bold mb-3"><i class="fas fa-link text-secondary me-2"></i>Useful Links</h5>
                <div class="d-flex gap-3 flex-wrap">
                    <a href="/swagger" class="btn btn-outline-primary">
                        <i class="fas fa-code me-2"></i>API Swagger
                    </a>
                    <a asp-page="/ChaosConfig" class="btn btn-outline-danger">
                        <i class="fas fa-radiation me-2"></i>Configure Chaos
                    </a>
                    <a asp-page="/Index" class="btn btn-outline-success">
                        <i class="fas fa-store me-2"></i>Product Catalog
                    </a>
                    <a href="/health/live" target="_blank" class="btn btn-outline-secondary">
                        <i class="fas fa-heartbeat me-2"></i>Health Check
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
